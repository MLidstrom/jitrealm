# JitRealm Environment Variables
# Copy this file to .env and fill in your values
# .env is gitignored and will not be committed

# PostgreSQL connection for NPC memory system
JITREALM_PG_HOST=localhost
JITREALM_PG_PORT=5432
JITREALM_PG_DATABASE=jitrealm
JITREALM_PG_USER=jitrealm_user
JITREALM_PG_PASSWORD=your_secure_password_here

# Optional: Set to false if pgvector extension is not installed
JITREALM_USE_PGVECTOR=true
